{% extends ':Default:base.html.twig' %}

{% block head %}
  {% stylesheets 'css/custom/help.less' filter='cssrewrite,lessphp' output='compiled/help.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% block body %}

  {% for category in categories %}
    <div>
      <h1>{{ category.name }}</h1>
      <div class="programs">

        {% for file in category.files %}
          {% set sound = getMediaPackageSoundUrl(file.data) %}
          {% set image = getMediaPackageImageUrl(file.data) %}
          <div class="program mediafile-{{ file.id }}">

            <a href="{{ file.downloadUrl }}">
            {% if image %}
            <div>
              <img src="{{ asset(image) }}">
            </div>
            {% endif %}

            {% if sound %}
            <div>
              <audio controls>
                <source src="{{ asset(sound) }}" type="audio/mpeg">

                <object>
                  <param name="autostart" value="false">
                  <param name="src" value="{{ sound }}">
                  <param name="autoplay" value="false">
                  <param name="controller" value="true">
                  <embed src="{{ asset(sound) }}" controller="true" autoplay="false" autostart="false" type="audio/mpeg"></embed>
                  Update your Browser
                </object>
              </audio>
            </div>
            <div>
              <b>{{ file.data.name }}</b>
            </div>
            <div>
              Download
            </div>
            {% endif %}
            </a>

          </div>
        {% endfor %}

      </div>
    </div>
    <br>
  {% endfor %}

{% endblock %}

{% block js %}
  <script>
  </script>
{% endblock %}
